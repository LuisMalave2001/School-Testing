<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="generate_class_event_wizard_form" model="ir.ui.view">
    <field name="name">generate.class.event.wizard.form</field>
    <field name="model">generate.class.event.wizard</field>
    <field name="arch" type="xml">
      <form>
        <field name="class_id" invisible="1"/>
        <group>
          <group>
            <field name="date_start"/>
            <field name="date_stop" class="o_highlight"/>
          </group>
          <group>
            <field name="on_conflict"/>

            <p class="alert alert-info" colspan="2" role="alert"
               attrs="{'invisible': [('on_conflict', '!=', 'overwrite')]}">
              This will remove the conflicting partner in the conflicting event.
              If the event has no partners, then it will be removed
            </p>
            <p class="alert alert-danger" colspan="2" role="alert"
               attrs="{'invisible': [('on_conflict', '!=', 'overwrite')]}">
              <strong>Warning!</strong> This changes cannot be reverted!
            </p>

            <p class="alert alert-info" colspan="2" role="alert"
               attrs="{'invisible': [('on_conflict', '!=', 'no_create')]}">
              This will create the event for all but those who has conflicting events
            </p>

            <p class="alert alert-info" colspan="2" role="alert"
               attrs="{'invisible': [('on_conflict', '!=', 'keep')]}">
              This option will keep both events
            </p>
            <p class="alert alert-info" colspan="2" role="alert"
               attrs="{'invisible': [('on_conflict', '!=', 'warn')]}">
              This option will keep both events and will send a log note in the class chatter
            </p>
          </group>
        </group>
        <footer>
          <button name="generate_events" type="object" string="Generate events"/>
          <button class="btn-danger" special="cancel" string="Cancel"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
