<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.actions.act_window" id="action_school_families">
        <field name="name">Families</field>
        <field name="res_model">school.family</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_families" name="Families"
              parent="school.people_management"
              sequence="10"
              action="action_school_families"/>

    <record id="school_family_view_form" model="ir.ui.view">
        <field name="name">school.family.view.form</field>
        <field name="model">school.family</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1 style="font-size: xx-large; color: #875A7B; font-weight: bold;" class="mt0 mb0" >
                        Family
                    </h1>
                    <group>
                        <field name="id" invisible="1"/>
                        <field name="name"/>
                    </group>
                    <notebook name="main_notebook">
                        <page string="Individuals" name="individuals">
                          <field name="no_student_ids" 
                            context="{'default_family_ids': [id]}"
                            domain="[('student_ids.ids', '=', [])]">
                                <kanban>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="o_kanban_card oe_kanban_global_click p-4">
                                                <button style="pointer-events:auto; top:1rem; right:1rem; position:absolute;"
                                                        class="btn btn-primary"
                                                        title="open" type="object" name="open_record">
                                                    <i class="fa fa-share-square-o"/>
                                                </button>
                                                <div class="oe_kanban_content">
                                                    <strong><field name="name"/></strong>
                                                    <strong><field name="student_ids" 
                                                      widget="many2many_tags"/></strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        <page string="Students" name="students">
                          <field name="student_ids" 
                            context="{'default_family_ids': [id]}"
                            domain="[('student_ids', '!=', False)]">
                                <kanban>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="o_kanban_card oe_kanban_global_click p-4">
                                                <button style="pointer-events:auto; top:1rem; right:1rem; position:absolute;"
                                                        class="btn btn-primary"
                                                        title="open" type="object" name="open_record">
                                                    <i class="fa fa-share-square-o"/>
                                                </button>
                                                <div class="oe_kanban_content">
                                                    <strong><field name="name"/></strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <page string="Relationships" name="relationships">
                          <field name="individual_relationship_ids">
                            <tree editable="bottom">
                              <field name="family_id" invisible="1"/>
                              <field name="family_individual_ids" invisible="1" />
                              <field name="family_student_ids" invisible="1" />
                              <field name="individual_id" readonly="1" 
                                  domain="[('id', 'in', family_student_ids)]"/>
                              <field name="individual_relation_id" readonly="1" 
                                  domain="[('id', 'in', family_individual_ids)]" />
                              <field name="relationship_type_id" />
                              <field name="custody" />
                              <field name="correspondence" />
                              <field name="family_portal" />
                              <field name="is_emergency_contact" />
                              <field name="financial_responsability" />
                            </tree>
                          </field>
                        </page>

                        <page string="Home addresses" name="home_addresses">
                            <field name="home_address_ids" mode="kanban"/>
                        </page>

                        <page string="Academics" name="academics">

                        </page>
                        <page string="Other" name="other">

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter" modifiers="{}">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
