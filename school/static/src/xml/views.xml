<?xml version="1.0" encoding="UTF-8" ?>
<templates>

    <t t-name="SwitchSchoolMenu">
        <li class="o_switch_school_menu">
            <a role="button" class="dropdown-toggle" data-toggle="dropdown" data-display="static" aria-expanded="false"
               href="#" title="Dropdown menu">
                <span t-attf-class="#{widget.isMobile ? 'fa fa-building-o' : 'oe_topbar_name'}">
                    <t t-if="!widget.isMobile">
                        <t t-esc="widget.current_district_name"/>
                    </t>
                </span>
            </a>
            <div class="dropdown-menu dropdown-menu-right" role="menu">
                <t t-foreach="widget.user_districts" t-as="district">
                    <div class="dropdown-submenu d-flex py-0 px-0" data-menu="district"
                         t-att-data-district-code-id="district.id">
                        <t t-set="is_allowed" t-value="widget.allowed_district_ids.includes(district.id)"/>
                        <t t-set="is_current" t-value="district.id === widget.current_district.id"/>
                        <div role="menuitemcheckbox" t-att-aria-checked="is_allowed"
                             t-att-aria-label="district.name"
                             tabindex="0"
                             class="ml-auto pl-3 pr-3 border border-top-0 border-left-0 border-bottom-0 toggle_district o_py">
                            <span style="height: 2rem;">
                                <i t-attf-class="fa fa-fw pt-2 {{is_allowed ? 'fa-check-square' : 'fa-square-o' }}"/>
                            </span>
                        </div>
                        <div role="button" t-att-aria-pressed="is_current" aria-label="Switch to this district code"
                             tabindex="0" class="d-flex flex-grow-1 py-0 log_into pl-3 o_py"
                             t-attf-style="justify-content: flex-end; {{is_current ? 'background-color: lightgrey;' : ''}}">
                            <div t-attf-class="mr-3 school_label w-100 {{ is_allowed or 'text-muted' }}">
                                <t t-esc="district.name"/>
                            </div>
                        </div>
                        <div class="dropdown-menu">
                            <t t-set="district_schools"
                               t-value="widget.user_schools_by_district_id[district.id]"/>
                            <t t-if="district_schools">
                                <t
                                        t-foreach="district_schools"
                                        t-as="school">
                                    <div class="dropdown-item d-flex py-0 px-0" data-menu="school"
                                         t-att-data-school-code-id="school.id">
                                        <t t-set="is_allowed"
                                           t-value="widget.allowed_school_ids.includes(school.id)"/>
                                        <t t-set="is_current"
                                           t-value="school.id === widget.current_school.id"/>
                                        <div role="menuitemcheckbox" t-att-aria-checked="is_allowed"
                                             t-att-aria-label="school.name"
                                             tabindex="0"
                                             class="ml-auto pl-3 pr-3 border border-top-0 border-left-0 border-bottom-0 toggle_school o_py">
                                            <span style="height: 2rem;">
                                                <i t-attf-class="fa fa-fw pt-2 {{is_allowed ? 'fa-check-square' : 'fa-square-o' }}"/>
                                            </span>
                                        </div>
                                        <div role="button" t-att-aria-pressed="is_current"
                                             aria-label="Switch to this school code"
                                             tabindex="0"
                                             class="d-flex flex-grow-1 align-items-center py-0 log_into pl-3 o_py"
                                             t-att-style="is_current ? 'background-color: lightgrey;' : ''">
                                            <div t-attf-class="mr-3 school_label w-100 {{ is_allowed or 'text-muted' }}">
                                                <t t-esc="school.name"/>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
        </li>
    </t>
</templates>